<?xml version="1.0"?>
<environments>
	
	<!--General settings-->
	<routes controllers="../../application/">
		<error to="404.php" type="static" />
		<route path=":lang/" id="home" to="home.php" type="static" first_null="true" />
		<route path="/:lang/contacts" id="contacts" to="contacts.php" type="static" first_null="true" />
		<route path=":lang/Posts/:alias/" id="view-post" to="Posts/view/$2" type="dynamic" first_null="true" />
	</routes>
	
	<struct>
		<member>
			<name>SMTP_OPTIONS</name>
			<value>
				<struct>
					<member>
						<name>use_smtp</name>
						<value><boolean>1</boolean></value>
					</member>
					<member>
						<name>use_ssl</name>
						<value><boolean>1</boolean></value>
					</member>
					<member>
						<name>server</name>
						<value><string>smtp.gmail.com</string></value>
					</member>
				</struct>
			</value>
		</member>
	</struct>
	
